<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/icon_message_person"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp"/>

    <ImageView
        android:id="@+id/iv_send_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_vertical"
       android:layout_toLeftOf="@+id/imageView"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />

    <ProgressBar
        android:id="@+id/pb_send_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/iv_send_image"
        android:layout_alignTop="@id/iv_send_image"
        android:layout_alignEnd="@id/iv_send_image"
        android:layout_alignBottom="@id/iv_send_image"
        android:visibility="visible"/>
</RelativeLayout>