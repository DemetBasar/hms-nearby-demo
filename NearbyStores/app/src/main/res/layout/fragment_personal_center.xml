<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.PersonalCenterFragment">

    <RelativeLayout
        android:id="@+id/rl_head"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/colorPrimary"
        android:clickable="true">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="74dp"
            android:layout_height="76dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="32dp"
            android:src="@mipmap/default_head"
            android:clickable="true" />

        <TextView
            android:id="@+id/tv_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/iv_head"
            android:text="Please Select Your Service Account Private Key File To Login" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_all_beacons"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/bg_press_down"
        android:clickable="true">

        <ImageView
            android:id="@+id/iv_all_beacons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_menu_sort_by_size" />

        <TextView
            android:id="@+id/tv_all_beacons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/iv_all_beacons"
            android:text="@string/my_beacons" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorPrimaryDark" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="50dp"
        android:background="@color/colorPrimaryDark" />

</LinearLayout>
