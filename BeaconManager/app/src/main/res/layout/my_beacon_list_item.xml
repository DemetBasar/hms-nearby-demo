<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_mybeacon_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_mybeacon_seq"
            android:layout_width="30dp"
            android:layout_height="20dp"
            android:text="1" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_beacon" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_my_beaconInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/ll_mybeacon_head"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description: " />

            <TextView
                android:id="@+id/tv_all_beacons_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beacon description" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type: " />

            <TextView
                android:id="@+id/tv_all_beacons_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beacon type" />

        </LinearLayout>


        <TextView
            android:id="@+id/tv_all_beacons_id_part1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:text="23a01af0232a45189c0e323fb773f5ef" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="4dp">

            <TextView
                android:id="@+id/tv_all_beacons_id_part2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0117" />

            <TextView
                android:id="@+id/tv_all_beacons_id_part3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="8996" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: " />

            <TextView
                android:id="@+id/tv_all_beacons_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="active"
                android:textColor="#008000" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
